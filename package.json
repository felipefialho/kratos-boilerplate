{
  "name": "kratos-boilerplate",
  "version": "0.0.1",
  "description": "A simple and fast boilerplate for static projects using Gulp, Pug, Stylus and PostCSS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LFeh/kratos-boilerplate.git"
  },
  "scripts": {
    "start": "gulp",
    "test": "npm run lint && npm run reporter",
    "setup": "npm i && npm run vendors",
    "fix": "./node_modules/.bin/eslint ./ --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "./node_modules/.bin/eslint ./src/",
    "lint:css": "./node_modules/.bin/stylint ./src/",
    "reporter": "./node_modules/.bin/parker ./build/css/",
    "styleguide": "gulp styleguide",
    "precommit": "npm test",
    "build": "gulp build",
    "vendors": "gulp vendors && cp ./node_modules/flexibility/flexibility.js public/js/"
  },
  "keywords": [
    "boilerplate"
  ],
  "author": "Felipe Fialho <hi@felipefialho.com> (http://www.felipefialho.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LFeh/kratos-boilerplate/issues"
  },
  "homepage": "https://github.com/LFeh/kratos-boilerplate#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "browser-sync": "^2.12.3",
    "eslint": "^3.8.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cheerio": "^0.6.2",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.1",
    "gulp-data": "^1.2.1",
    "gulp-group-css-media-queries": "^1.1.0",
    "gulp-imagemin": "^3.0.1",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.1.0",
    "gulp-pug": "^3.0.3",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-stylus": "^2.3.1",
    "gulp-svgmin": "^1.2.2",
    "gulp-svgstore": "^6.0.0",
    "gulp-uglify": "^2.0.0",
    "husky": "^0.11.4",
    "js-yaml": "^3.6.1",
    "lost": "^7.1.0",
    "mdcss": "^1.5.1",
    "mdcss-theme-github": "^2.0.0",
    "parker": "0.0.10",
    "postcss-font-magician": "^1.4.0",
    "poststylus": "^0.2.3",
    "rucksack-css": "^0.8.5",
    "rupture": "^0.6.1",
    "stylint": "^1.5.7",
    "lazysizes": "^2.0.2",
    "picturefill": "^3.0.2",
    "flexibility": "^2.0.1"
  }
}
